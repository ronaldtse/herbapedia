{
  "name": "@herbapedia/site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Herbapedia - Medicinal Plants Encyclopedia for SIPM",
  "scripts": {
    "dev": "vite",
    "build": "vite-ssg build",
    "preview": "vite preview",
    "scrape": "node scripts/scrape-herbapedia.js",
    "scrape:zh-hant": "node scripts/scrape-herbapedia.js --lang zh-Hant --skip-images",
    "scrape:zh-hans": "node scripts/scrape-herbapedia.js --lang zh-Hans --skip-images",
    "scrape:all": "node scripts/scrape-herbapedia.js --all-languages"
  },
  "dependencies": {
    "@herbapedia/data": "workspace:*",
    "@modyfi/vite-plugin-yaml": "^1.1.1",
    "@unhead/vue": "^2.1.4",
    "vite-ssg": "^28.3.0",
    "vue": "^3.5.13",
    "vue-i18n": "^11.2.8",
    "vue-router": "^4.5.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "marked": "^15.0.6",
    "node-fetch": "^3.3.2",
    "vite": "^6.1.0"
  }
}
